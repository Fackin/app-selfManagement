/* pages/home/home.wxss */
page {
  background: #efefef;
}
.home-view {
  width: 100%;
  height: 1000rpx;
}
.card-box {
  width: 100%;
  height: 100%;
  text-align: center;
}

.card-item {
  position: absolute;
  top: 100rpx;
  left: 105rpx;
  width: 540rpx;
  height: 800rpx;
  border-radius: 18rpx;
  box-sizing: border-box;
  z-index: 1;
  background: #fff;
}
.card-image {
  z-index: 2;
  width: 540rpx;
  height: 480rpx;
}
.card-image image{
  width: 100%;
  height: 100%;
  border-radius: 18rpx 18rpx 0 0;
}
.card-title {
  height: 320rpx;
  border-radius: 18rpx;
  text-align: left;
  box-sizing: border-box;
  padding: 20rpx;
  color: #666666;
  font-size: 28rpx;
  display: table-cell;
  vertical-align: middle;
  text-indent: 56rpx;
}